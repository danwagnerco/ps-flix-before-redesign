<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<%= link_to "Add New Movie", new_movie_path %>

<% @movies.each do |movie| %>
<ul>
  <article>
    <header>
      <h2><%= link_to movie.title, movie %></h2>
    </header>
    <table>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Released on:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
      <tr>
        <th>Description:</th>
        <td><%= truncate(movie.description, length: 35, seperator: ' ')  %></td>
      </tr>
    </table>
  </article>
</ul>
<% end %>

<%= render "footer" %>
